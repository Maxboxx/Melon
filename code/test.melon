
struct Comparison<A>
	static function A: min<B>(A: a, B: b)
		return if a < b -> a else b as A
	end
	
	static function A: max<B>(A: a, B: b)
		return if a > b -> a else b as A
	end
	
	static function A: clamp<B, C>(A: value, B: min, C: max)
		return if value < min then
			min as A
		elseif value > max then
			max as A
		else
			value
		end
	end
end


int: a = Comparison<int>.min<byte>(3, 4)
int: b = Comparison<ushort>.max<short>(3, 4)
int: c = Comparison<long>.clamp<uint, ubyte>(4, 3, 5)
